generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password_hash String
  created_at DateTime @default(now())

  entries WorkEntrie[]

  @@map("users")
}

model WorkEntrie {
  id String @id @default(uuid())
  date DateTime
  duration_minutes Int
  hourly_rate_at_time Decimal @db.Decimal(10, 2)

  user User @relation(fields: [user_id], references: [id])
  user_id String

  @@index([user_id, date])
  @@map("work_entries")
}
